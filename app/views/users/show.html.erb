<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Account number:</strong>
  <%= @user.account_number %>
</p>

<h3>Kulunkorvaukset</h3>
<table class="table table-condensed">
  <thead>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Date</th>
    <th>Amount</th>
    <th colspan="5"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.user.name %></td>
        <td><%= expense.date %></td>
        <td><%= expense.euros %></td>
        <% unless expense.paid %>
            <td class="label label-warning">Ei maksettu</td>
        <% end %>
        <% unless expense.accepted %>
            <td class="label label-danger">Ei hyv√§ksytty</td>
        <% end %>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>



<% if @user.admin %>
    <p>User is admin.</p>
<% end %>
<% if current_user.admin? or current_user == @user %>

    <%= link_to 'Change password', edit_user_registration_path(@user) %>
    <%= link_to 'Change info', edit_user_path(@user) %>

<% end %>
<%= link_to 'Back', users_path %>
