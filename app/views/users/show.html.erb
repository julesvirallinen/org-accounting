<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Account number:</strong>
  <%= @user.account_number %>
</p>

<h3>Kulunkorvaukset</h3>
<table class="table table-condensed">
  <thead>
  <tr>
    <th>Title</th>
    <th>User</th>
    <th>Meeting</th>
    <th>Accepted</th>
    <th>Amount</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @user.expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.user.name %></td>
        <td><%= expense.meeting.meeting if expense.meeting%></td>
        <td><%= expense.accepted %></td>
        <td><%= expense.euros %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>



<% if @user.admin %>
    <p>User is admin.</p>
<% end %>
<% if current_user.admin? or current_user == @user %>

    <%= link_to 'Change password', edit_user_registration_path(@user) %>
    <%= link_to 'Change info', edit_user_path(@user) %>

<% end %>
<%= link_to 'Back', users_path %>
