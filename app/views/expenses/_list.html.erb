  <tbody>
  <% expenses.each do |expense| %>
      <tr>
        <td><%= expense.description %></td>
        <td><%= expense.user.name %></td>
        <td><%= expense.date %></td>
        <td><%= toeuros(expense.euros) %></td>
        <% unless expense.paid %>
            <td class="label label-warning">Ei maksettu</td>
        <% end %>
        <% unless expense.accepted %>
            <td class="label label-danger">Ei hyv√§ksytty</td>
        <% end %>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
      </tr>
  <% end %>
  </tbody>
</table>